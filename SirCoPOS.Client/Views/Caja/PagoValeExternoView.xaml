<UserControl x:Class="SirCoPOS.Client.Views.Caja.PagoValeExternoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:vm="clr-namespace:SirCoPOS.Client.ViewModels.Caja"
             mc:Ignorable="d" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:cv="clr-namespace:SirCoPOS.Client.Converters"
             Height="520" Width="860" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <cv:ArrayMultiConverter x:Key="arr"></cv:ArrayMultiConverter>
        <cv:InverseBoolConverter x:Key="inv"></cv:InverseBoolConverter>
        <BooleanToVisibilityConverter x:Key="bolvis"></BooleanToVisibilityConverter>
        <cv:ImageUrlMultiConverter x:Key="imageUrl"></cv:ImageUrlMultiConverter>
        <cv:ImageUrlConverter x:Key="imageUrl2" />
        <cv:BoolTextConverter x:Key="boolText"></cv:BoolTextConverter>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:PagoValeExternoViewModel2></vm:PagoValeExternoViewModel2>
    </UserControl.DataContext>
    <Grid Margin="-1,0,-24,0">

        <Grid Margin="10,10,648,421">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Vale" VerticalAlignment="Top"/>
            <TextBox x:Name="tbVale" HorizontalAlignment="Left" Height="23" Margin="72,3,-8,0" TextWrapping="Wrap" Text="{Binding ValeSearch, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="128">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
            <TextBox Text="{Binding Negocio, UpdateSourceTrigger=PropertyChanged}" Height="26" Margin="72,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="54"/>

            <TextBlock HorizontalAlignment="Left" Margin="0,34,0,0" TextWrapping="Wrap" Text="Negocio" VerticalAlignment="Top"/>
            <ComboBox SelectedValue="{Binding SelectedNegocio}" SelectedValuePath="Id" HorizontalAlignment="Left" Margin="131,35,-8,0" VerticalAlignment="Top" ItemsSource="{Binding Negocios}" Width="69">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}-{1}">
                                    <Binding Path="Negocio"/>
                                    <Binding Path="Descripcion"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="0,67,0,0" TextWrapping="Wrap" Text="Cuenta" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="72,66,-8,0" TextWrapping="Wrap" Text="{Binding Cuenta, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="128">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

        </Grid>

        <TabControl SelectedItem="{Binding SelectedFirma}" TabStripPlacement="Left" ItemsSource="{Binding Vale.Distribuidor.Firmas, NotifyOnTargetUpdated=True}" TargetUpdated="TabControl_TargetUpdated" Margin="10,0,0,10" Height="202.24" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="309.716">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="{Binding ''}"/>
                            <Button Command="{Binding DataContext.OpenFirma, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}, Mode=FindAncestor}}">
                                <Button.CommandParameter>
                                    <MultiBinding Converter="{StaticResource arr}">
                                        <Binding Path="DataContext.Vale.Distribuidor.Id" RelativeSource="{RelativeSource AncestorType={x:Type ItemsControl}, Mode=FindAncestor}" />
                                        <Binding/>
                                    </MultiBinding>
                                </Button.CommandParameter>
                                <Image>
                                    <Image.Source>
                                        <MultiBinding Converter="{StaticResource ResourceKey=imageUrl}" ConverterParameter="FirmaUrl">
                                            <Binding Path="DataContext.Vale.Distribuidor.Id" RelativeSource="{RelativeSource AncestorType={x:Type ItemsControl}, Mode=FindAncestor}" />
                                            <Binding/>
                                        </MultiBinding>
                                    </Image.Source>
                                </Image>
                            </Button>
                            <!--<TextBlock>
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource ResourceKey=imageUrl}" ConverterParameter="FirmaUrl">
                                    <Binding Path="DataContext.Vale.Distribuidor.Id" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}" ></Binding>
                                    <Binding></Binding>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>-->
                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
        <!--
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>-->

        <TextBlock x:Name="textBlock2_Copy" HorizontalAlignment="Left" Margin="65,101,0,0" TextWrapping="Wrap" Text="#" VerticalAlignment="Top" Width="13"/>
        <TextBlock x:Name="textBlock2_Copy1" HorizontalAlignment="Left" Margin="10,122,0,0" TextWrapping="Wrap" Text="Disponible" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding Vale.CanceladoMotivo, StringFormat=Cancelado - \{0\}, TargetNullValue=Cancelado}" Visibility="{Binding Vale.Cancelado, Converter={StaticResource bolvis}, FallbackValue=Hidden}" Foreground="Red" x:Name="textBlock2_Copy2" HorizontalAlignment="Left" Margin="10,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <TextBlock x:Name="textBlock2_Copy3" HorizontalAlignment="Left" Margin="10,170,0,0" TextWrapping="Wrap" Text="Distribuidor" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="textBlock2_Copy4" HorizontalAlignment="Left" Margin="10,217,0,0" TextWrapping="Wrap" Text="Estatus" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="83,100,0,0" TextWrapping="Wrap" Text="{Binding Vale.Vale}" VerticalAlignment="Top" Width="60"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="90,124,0,0" TextWrapping="Wrap" Text="{Binding Vale.Disponible, StringFormat=\{0:C\}}" VerticalAlignment="Top" Width="120" TextAlignment="Right">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding MayorDisponible}" Value="True">
                            <Setter Property="Foreground" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="110,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} {1} {2}">
                    <Binding Path="Vale.Distribuidor.Nombre" />
                    <Binding Path="Vale.Distribuidor.ApPaterno" />
                    <Binding Path="Vale.Distribuidor.ApMaterno" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock x:Name="textBlock_Copy3" HorizontalAlignment="Left" Margin="105,217,0,0" TextWrapping="Wrap" Text="{Binding Vale.Distribuidor.Status}" VerticalAlignment="Top" Width="160"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="384,52,0,0" TextWrapping="Wrap" Text="Total" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="502.167,51.796,0,0" TextWrapping="Wrap" Text="{Binding Total, StringFormat=\{0:C\}}" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="502,81,0,0" TextWrapping="Wrap" Text="{Binding Pagar, Delay=1000, StringFormat=\{0:C\}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="114"/>
        <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Left" Margin="384,81,0,0" TextWrapping="Wrap" Text="Pagar" VerticalAlignment="Top" Width="76"/>
        <TextBlock x:Name="textBlock1_Copy2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Promoción" VerticalAlignment="Top" Margin="386,195,0,0" Width="119"/>
        <TextBlock x:Name="textBlock1_Copy3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Plazos" VerticalAlignment="Top" Margin="386,228,0,0"/>
        <ComboBox IsEnabled="{Binding HasPromocion}" ItemStringFormat="M" SelectedValue="{Binding SelectedPromocion}" ItemsSource="{Binding Promocion.Promociones}" x:Name="comboBox" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,194,271,0"/>
        <ComboBox IsEnabled="{Binding HasPromocionPlazos}" SelectedValue="{Binding SelectedPlazo}" ItemsSource="{Binding Plazos}" Margin="0,229,271,0" HorizontalAlignment="Right" Width="38" Height="23" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="323,255,0,212" TextWrapping="Wrap" Width="312">
            <TextBlock.Text>
                <MultiBinding StringFormat="Primeros: {0:C} Ultimo: {1:C}">
                    <Binding Path="Primero" />
                    <Binding Path="Ultimo" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock x:Name="textBlock4" HorizontalAlignment="Left" Margin="229,77,0,0" TextWrapping="Wrap" Text="Electrónica" VerticalAlignment="Top" Width="97"/>
        <TextBlock x:Name="textBlock5" HorizontalAlignment="Left" Margin="10,241,0,0" TextWrapping="Wrap" Text="Cliente" VerticalAlignment="Top" Width="85"/>
        <TextBlock x:Name="textBlock6" HorizontalAlignment="Left" Margin="105,241,0,0" TextWrapping="Wrap" Text="{Binding Vale.ClienteId}" VerticalAlignment="Top" Width="45"/>
        <TextBlock x:Name="textBlock1_Copy4" HorizontalAlignment="Left" Margin="384,107,0,0" TextWrapping="Wrap" Text="Limite" VerticalAlignment="Top" Width="91"/>
        <TextBox IsEnabled="{Binding Vale.WithLimite, Converter={StaticResource inv}}" x:Name="textBox1_Copy" HorizontalAlignment="Left" Margin="502,107,0,0" TextWrapping="Wrap" Text="{Binding Limite, StringFormat=\{0:C\}, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="114"/>
        <TextBlock x:Name="textBlock1_Copy5" HorizontalAlignment="Left" Margin="384,135,0,0" TextWrapping="Wrap" Text="Contra Vale" VerticalAlignment="Top" Width="96"/>
        <TextBlock x:Name="textBlock1_Copy6" HorizontalAlignment="Left" Margin="502,135,0,0" TextWrapping="Wrap" Text="{Binding ContraVale, StringFormat=\{0:C\}}" VerticalAlignment="Top" Width="112" TextAlignment="Right"/>
        <TextBlock x:Name="textBlock5_Copy" HorizontalAlignment="Left" Margin="10,265,0,0" TextWrapping="Wrap" Text="Promoción" VerticalAlignment="Top" Width="110"/>
        <TextBlock x:Name="textBlock5_Copy2" HorizontalAlignment="Left" Margin="120,265,0,0" TextWrapping="Wrap" Text="{Binding Vale.Distribuidor.Promocion, Converter={StaticResource boolText}}" VerticalAlignment="Top" Width="30" TextAlignment="Right"/>
        <!--<Grid Margin="10,272,676,224">
            <TextBlock x:Name="textBlock5_Copy1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Contra Vale" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock5_Copy3" HorizontalAlignment="Left" Margin="109,0,0,0" TextWrapping="Wrap" Text="{Binding Vale.Distribuidor.ContraVale, Converter={StaticResource boolText}}" VerticalAlignment="Top"/>
            <CheckBox IsChecked="{Binding GenerateContraVale}" Visibility="{Binding Vale.Distribuidor.ContraVale, Converter={StaticResource bolvis}}" x:Name="checkBox" HorizontalAlignment="Left" Margin="148,1,0,0" VerticalAlignment="Top"/>
        </Grid>-->
        <DataGrid IsEnabled="{Binding Vale.Distribuidor.Electronica}" SelectionUnit="FullRow" GridLinesVisibility="Horizontal" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" ItemsSource="{Binding ProductosView}" x:Name="dataGrid" Grid.Row="0" Grid.Column="0" Margin="325,0,0,10" HorizontalAlignment="Left" Width="305" Height="202" VerticalAlignment="Bottom">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <ComboBox SelectedItem="{Binding SelectedPlazo, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Plazos}" Visibility="{Binding HasPlazos, Converter={StaticResource bolvis}}"/>
                                <TextBlock Text="{Binding SelectedPlazo}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <fa:ImageAwesome Height="20" Icon="Mobile" Visibility="{Binding Item.Electronica, Converter={StaticResource bolvis}}"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Serie" Binding="{Binding Item.Serie}"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Image Width="50" Height="50" Visibility="{Binding HasImage, Converter={StaticResource bolvis}}" Source="{Binding Id, ConverterParameter=ProductoUrl, Converter={StaticResource imageUrl2}}"/>
                                <!--<Image Source="/SirCoPOS.Win;component/Images/Vendedora.png" Width="40"/>-->
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Image" Binding="{Binding Item.HasImage}"/>
                <DataGridTextColumn Header="Marca" Binding="{Binding Item.Marca}"/>
                <DataGridTextColumn Header="Modelo" Binding="{Binding Item.Modelo}"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Item.Precio, StringFormat=\{0:C\}}"/>
                <DataGridTextColumn Foreground="Red" Header="Fijo" Binding="{Binding Item.Fijo, StringFormat=\{0:C\}}"/>
                <DataGridTextColumn Foreground="Red" Header="Desc" Binding="{Binding Item.DescuentoDirecto, StringFormat=\{0:C\}}"/>
                <DataGridTextColumn Foreground="Red" Header="Descuento" Binding="{Binding Item.Descuento, StringFormat=\{0:C\}}"/>
                <DataGridTextColumn Foreground="Red" Header="Porcentaje" Binding="{Binding Item.DescuentoPorcentaje, StringFormat=\{0:P\}}"/>
                <DataGridTextColumn Header="Promocion" Binding="{Binding Item.PromocionId}"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Item.Total, StringFormat=\{0:C\}}"/>
                <DataGridTextColumn Header="Pago" Binding="{Binding Item.Pago, StringFormat=\{0:C\}}"/>
                <DataGridTextColumn Header="Saldo" Binding="{Binding Item.Saldo, StringFormat=\{0:C\}}"/>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ListView ItemsSource="{Binding Item.FormasPago}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} ({1:C})">
                                                        <Binding Path="FormaPago" />
                                                        <Binding Path="Importe"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" ItemsSource="{Binding PlanPago}" x:Name="dataGrid1" Margin="0,13,30,10" HorizontalAlignment="Right" Width="220">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Number}"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Date, StringFormat=d}"/>
                <DataGridTextColumn Header="Pago" Binding="{Binding Amount, StringFormat=c}"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="textBlock1_Copy7" HorizontalAlignment="Left" Margin="386,165,0,0" TextWrapping="Wrap" Text="Blindaje" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1_Copy8" HorizontalAlignment="Left" Margin="537,166,0,0" TextWrapping="Wrap" Text="{Binding Promocion.Blindaje, StringFormat=c}" VerticalAlignment="Top" Width="77" TextAlignment="Right"/>
        <TextBlock x:Name="textBlock2_Copy5" HorizontalAlignment="Left" Margin="170,145,0,0" TextWrapping="Wrap" Text="Cuenta" VerticalAlignment="Top" Width="60"/>
        <TextBlock x:Name="textBlock2_Copy6" HorizontalAlignment="Left" Margin="235,145,0,0" TextWrapping="Wrap" Text="{Binding Vale.Distribuidor.Cuenta}" VerticalAlignment="Top" Width="80"/>
        <TextBlock x:Name="textBlock4_Copy" HorizontalAlignment="Left" Margin="327,77,0,0" TextWrapping="Wrap" Text="{Binding Vale.Distribuidor.Electronica, Converter={StaticResource boolText}}" VerticalAlignment="Top" RenderTransformOrigin="0.778,-0.812" Width="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="244,11,0,0" TextWrapping="Wrap" Text="{Binding SelectedFirma}" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1_Copy9" HorizontalAlignment="Left" Margin="502.167,27.856,0,0" TextWrapping="Wrap" Text="{Binding TotalElectronica, StringFormat=\{0:C\}}" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1_Copy10" HorizontalAlignment="Left" Margin="502.167,3.916,0,0" TextWrapping="Wrap" Text="{Binding TotalCalzado, StringFormat=\{0:C\}}" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1_Copy11" HorizontalAlignment="Left" Margin="384,28,0,0" TextWrapping="Wrap" Text="Electrónica" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1_Copy12" HorizontalAlignment="Left" Margin="384,4,0,0" TextWrapping="Wrap" Text="Calzado" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
