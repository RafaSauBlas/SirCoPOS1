<UserControl x:Class="SirCoPOS.Client.Views.Caja.LoadClienteSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:vm="clr-namespace:SirCoPOS.Client.ViewModels.Caja"
             xmlns:c="clr-namespace:SirCoPOS.Client.Converters"
             xmlns:s="clr-namespace:Microsoft.CSharp;assembly=System"
             xmlns:xt="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type={x:Type vm:LoadClienteViewModel}}"
             Height="255.719" Width="400" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <c:ImageUrlConverter x:Key="imageUrl"></c:ImageUrlConverter>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
        </Grid.Background>
        <!--Boton genera Nuevo Cliente-->
        <Button Command="{Binding ChangeViewCommand}" CommandParameter="new" x:Name="button"  Margin="0,217,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
            </Button.Background>
            <Image x:Name="agregarcliente" Height="23" Width="25" Source="/SirCoPOS.Win;component/Images/nuev.png" />
        </Button>
        <!--Etiqueta cliente-->
        <TextBlock Visibility="Hidden" x:Name="textBlock" HorizontalAlignment="Left" Margin="10,14,0,0" TextWrapping="Wrap" Text="Cliente" VerticalAlignment="Top"/>
        <!--Captura del idcliente para busqueda-->
        <TextBox Visibility="Hidden" x:Name="tbSearch" HorizontalAlignment="Left" Height="25" Margin="113.85,14.94,0,0" TextWrapping="Wrap" Text="{Binding ClienteSearch, UpdateSourceTrigger=PropertyChanged, TargetNullValue=''}" VerticalAlignment="Top" Width="120">
            <TextBox.InputBindings>
                <KeyBinding Key="Return" Command="{Binding SearchCommand}"></KeyBinding>
            </TextBox.InputBindings>
        </TextBox>
        <TextBlock HorizontalAlignment="Left" Margin="124,88,0,0" TextWrapping="Wrap" Text="{Binding Cliente.Id}" VerticalAlignment="Top" FontWeight="Bold"/>
        <!--Etiqueta Id-->
        <TextBlock HorizontalAlignment="Left" Margin="10,88,0,0" TextWrapping="Wrap" Text="Id:" VerticalAlignment="Top"/>
        <!--Nombre Cliente-->
        <TextBlock HorizontalAlignment="Left" Margin="124,117,0,0" TextWrapping="Wrap" Text="{Binding Cliente.Nombre}" VerticalAlignment="Top" FontWeight="Bold"/>
        <!--Apellido Paterno-->
        <TextBlock HorizontalAlignment="Left" Margin="124,152,0,0" TextWrapping="Wrap" Text="{Binding Cliente.ApPaterno}" VerticalAlignment="Top" FontWeight="Bold"/>
        <!--Apellido Materno-->
        <TextBlock Margin="124,185,0,0" TextWrapping="Wrap" Text="{Binding Cliente.ApMaterno}" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold"/>
        <!--Eiqueta Nombre-->
        <TextBlock HorizontalAlignment="Left" Margin="10,117,0,0" TextWrapping="Wrap" Text="Nombre:" VerticalAlignment="Top"/>
        <!--Etiqueta Apellido Paterno-->
        <TextBlock HorizontalAlignment="Left" Margin="10,152,0,0" TextWrapping="Wrap" Text="Ap. Paterno:" VerticalAlignment="Top"/>
        <!--Etiqueta apellido paterno-->
        <TextBlock HorizontalAlignment="Left" Margin="10,185,0,0" TextWrapping="Wrap" Text="Ap. Materno:" VerticalAlignment="Top"/>
        <!--Etiqueta telefono-->
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Telefono" VerticalAlignment="Top"/>
        <!--Captura de telefono para busqueda-->
        <xt:MaskedTextBox x:Name="txt_Telefono" Mask="(000) 000-0000" HorizontalAlignment="Left" Height="25" Margin="114,17,0,0" TextWrapping="Wrap" Text="{Binding ClienteTelefonoSearch, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" KeyboardNavigation.TabIndex ="1">
            <TextBox.InputBindings>
                <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
            </TextBox.InputBindings>
        </xt:MaskedTextBox>
        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="10,55,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top"/>
        <xt:MaskedTextBox x:Name="txt_Nombre"  HorizontalAlignment="Left" Height="25" Margin="114,52,0,0" TextWrapping="Wrap" Text="{Binding ClienteNombreSearch, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="265" KeyboardNavigation.TabIndex ="1">
            <xt:MaskedTextBox.InputBindings>
                <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
            </xt:MaskedTextBox.InputBindings>
        </xt:MaskedTextBox>
    </Grid>
</UserControl>
