<UserControl x:Class="SirCoPOS.Client.Views.Tabs.FondoArqueo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:cv="clr-namespace:SirCoPOS.Client.Converters"
             xmlns:vm="clr-namespace:SirCoPOS.Client.ViewModels.Tabs"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:FondoArqueoViewModel></vm:FondoArqueoViewModel>
    </UserControl.DataContext>
    <UserControl.Resources>
        <cv:ValueVisibilityConverter x:Key="cval"></cv:ValueVisibilityConverter>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,58,0,0" TextWrapping="Wrap" Text="Importe" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="27" Margin="149,53,0,0" TextWrapping="Wrap" Text="{Binding Importe, StringFormat=\{0:C\}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" KeyboardNavigation.TabIndex ="0"/>
        <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Left" Margin="10,4,0,0" TextWrapping="Wrap" Text="Auditor" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Height="27" Margin="149,83,0,0" TextWrapping="Wrap" Text="{Binding SearchAuditor, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" KeyboardNavigation.TabIndex ="1" Grid.RowSpan="2">
            <TextBox.InputBindings>
                <KeyBinding Key="Return" Command="{Binding LoadAuditorCommand}"></KeyBinding>
            </TextBox.InputBindings>
        </TextBox>
        <Button Command="{Binding SaveCommand}" Content="Guardar" HorizontalAlignment="Left" Margin="149,64,0,0" VerticalAlignment="Top" Width="75" KeyboardNavigation.TabIndex ="2" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="274,58,0,0" TextWrapping="Wrap" Text="Faltante" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="342,58,0,0" TextWrapping="Wrap" Text="{Binding Faltante, StringFormat=C}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="150,9,0,0" TextWrapping="Wrap" Text="{Binding Effectivo, StringFormat=C}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="274,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.RowSpan="2">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} {1} {2}">
                    <Binding Path="Auditor.Nombre" />
                    <Binding Path="Auditor.ApellidoPaterno" />
                    <Binding Path="Auditor.ApellidoMaterno" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock Visibility="{Binding Faltante, Converter={StaticResource cval}}" Foreground="Red" HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Text="Faltante de efectivo generara cargo" Height="24" VerticalAlignment="Bottom" Grid.Row="1"/>
        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="10,31,0,0" TextWrapping="Wrap" Text="Contraseña" VerticalAlignment="Top" Grid.Row="1"/>
        <PasswordBox x:Name="txtB_Contra"  HorizontalAlignment="Left" Height="27" Margin="149,29,0,0"  PasswordChanged="PasswordBox_PasswordChanged" VerticalAlignment="Top" Width="120" KeyboardNavigation.TabIndex = "2" Grid.Row="1">
            <PasswordBox.InputBindings>
                <KeyBinding Key="Return" Command="{Binding LoadUserCommand}"/>
            </PasswordBox.InputBindings>
        </PasswordBox>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="10,10,-116,0" TextWrapping="Wrap" Text="Arqueo de Efectivo" VerticalAlignment="Top" FontWeight="SemiBold" FontSize="16" Width="906" Background="#FF007ACC" Foreground="White"/>
    </Grid>
</UserControl>
