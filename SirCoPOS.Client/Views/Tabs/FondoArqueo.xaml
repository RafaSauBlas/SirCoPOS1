<UserControl x:Class="SirCoPOS.Client.Views.Tabs.FondoArqueo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:cv="clr-namespace:SirCoPOS.Client.Converters"
             xmlns:vm="clr-namespace:SirCoPOS.Client.ViewModels.Tabs"
             d:DesignHeight="450" d:DesignWidth="800" KeyDown="UserControl_KeyDown" KeyUp="UserControl_KeyUp" MouseLeftButtonDown="UserControl_MouseLeftButtonDown" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
    <UserControl.DataContext>
        <vm:FondoArqueoViewModel></vm:FondoArqueoViewModel>
    </UserControl.DataContext>
    <UserControl.Resources>
        <cv:ValueVisibilityConverter x:Key="cval"></cv:ValueVisibilityConverter>
    </UserControl.Resources>
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseLeftButtonUp="Grid_MouseLeftButtonUp">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,33,0,0" TextWrapping="Wrap" Text="Importe" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="27" Margin="149,28,0,0" TextWrapping="Wrap" Text="{Binding Importe, StringFormat=\{0:C\}, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" TabIndex="1" Grid.Row="1"/>
        <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Left" Margin="10,64,0,0" TextWrapping="Wrap" Text="Auditor" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Height="27" Margin="149,58,0,0" TextWrapping="Wrap" Text="{Binding SearchAuditor, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" TabIndex ="2" Grid.Row="1">
            <TextBox.InputBindings>
                <KeyBinding Key="Return" Command="{Binding LoadAuditorCommand}"></KeyBinding>
            </TextBox.InputBindings>
        </TextBox>
        <Button Command="{Binding SaveCommand}" Content="Guardar" HorizontalAlignment="Left" Margin="149,124,0,0" VerticalAlignment="Top" Width="75" TabIndex ="4" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="274,33,0,0" TextWrapping="Wrap" Text="Faltante" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="342,33,0,0" TextWrapping="Wrap" Text="{Binding Faltante, StringFormat=C}" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="150,6,0,0" TextWrapping="Wrap" Text="{Binding Effectivo, StringFormat=C}" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="274,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} {1} {2}">
                    <Binding Path="Auditor.Nombre" />
                    <Binding Path="Auditor.ApellidoPaterno" />
                    <Binding Path="Auditor.ApellidoMaterno" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        <TextBlock Visibility="{Binding Faltante, Converter={StaticResource cval}}" Foreground="Red" HorizontalAlignment="Left" Margin="10,0,0,10" TextWrapping="Wrap" Text="Faltante de efectivo generara cargo" Height="24" VerticalAlignment="Bottom" Grid.Row="1"/>
        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="10,91,0,0" TextWrapping="Wrap" Text="Contraseña" VerticalAlignment="Top" Grid.Row="1"/>
        <PasswordBox x:Name="txtB_Contra"  HorizontalAlignment="Left" Height="27" Margin="149,89,0,0"  PasswordChanged="PasswordBox_PasswordChanged" VerticalAlignment="Top" Width="120" TabIndex = "3" Grid.Row="1">
            <PasswordBox.InputBindings>
                <KeyBinding Key="Return" Command="{Binding LoadUserCommand}"/>
            </PasswordBox.InputBindings>
        </PasswordBox>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="11,10,-116,0" TextWrapping="Wrap" Text="Arqueo de Efectivo" VerticalAlignment="Top" FontWeight="SemiBold" FontSize="16" Width="905" Background="#FF007ACC" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="11,6,0,0" TextWrapping="Wrap" Text="Efectivo" VerticalAlignment="Top" Grid.Row="1"/>
    </Grid>
</UserControl>
